@{
    ViewBag.Title = "Home Page";
}


<br/>
<br/>
<div class="row">
    @foreach (var i in ViewBag.Produtos)
    {
        <div class="col-sm-6 col-md-3">
            <div class="thumbnail">
                <img src="/Content/Images/@i.imagem" alt="Generic placeholder thumbnail">
            </div>

            <div class="caption">
                <h3>
                @Html.ActionLink((string)i.nome,"View","Produto",new { produto = i.id }, new { })
                </h3>
                <p>R$ @i.preco</p>
            </div>
        </div>
    }
</div>